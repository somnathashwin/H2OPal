<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.H2OPal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set global colors -->
        <item name="colorPrimary">@color/wheat</item>
        <item name="colorPrimaryDark">@color/wheat</item>
        <item name="colorAccent">@color/wheat</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/wheat</item>
        <item name="android:navigationBarColor">@color/wheat</item>

        <!-- Disable action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>