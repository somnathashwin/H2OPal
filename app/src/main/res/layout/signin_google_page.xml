<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/siginbanner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/sigin_google_pal"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signin with google to Continue."
        app:layout_constraintTop_toBottomOf="@id/siginbanner"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/ls_regular"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/googleSigninBtn"
        android:layout_width="250dp"
        android:layout_height="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:background="@drawable/continue_withgoogle_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>